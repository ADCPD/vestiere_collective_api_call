{% extends 'base.html.twig' %}

{% block title %}Hello Stripe{% endblock %}

{% block body %}

<div class="container">
    <div class="row">

        {% for item in items %}
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="https://www.etam.com/dw/image/v2/AAWW_PRD/on/demandware.static/-/Sites-ELIN-master/default/dwb7c6aea7/652165705_x.jpg?sw=600&sh=710" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">Produit {{ item.name }}</h5>
                <h6>{{ item.priceAmount|format_currency('EUR', {rounding_mode: 'floor'}) }} €</h6>

                <p class="card-text">
                    Le lorem ipsum est, en imprimerie, une suite de mots sans signification utilisée à titre provisoire pour calibrer une mise en page, le texte définitif venant remplacer le faux-texte dès qu'il est prêt ou que la mise en page est achevée.
                </p>
                <a id="checkout-button" class="btn btn-primary">Acheter</a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="https://js.stripe.com/v3/"></script>
    <script type="text/javascript">
       var stripe_public_key =  "{{stripe_public_key}}";
    </script>
    <script type="text/javascript" src="{{ asset('build/checkout/app_checkout.js')}}">
{% endblock %}